{
  "name": "edison",
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "2.0.5"
  },
  "scripts": {
    "lint:eslint": "eslint edison/static/js/*.js --quiet",
    "lint:prettier": "prettier --single-quote \"**/*.{json,yml,html,css}\" --check",
    "prettier:format": "prettier --single-quote --write \"**/*.{json,yml,html,css,js}\" \".github/**/*\""
  }
}
